<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Add Book</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <h2>Add Book</h2>
    <% if (error) { %>
      <div class="error-message"><%= error %></div>
    <% } %>
    <form method="POST" action="/admin/books/add" enctype="multipart/form-data" class="card-form">
      <label for="title">Title</label>
      <input id="title" name="title" required>

      <label for="authors">Authors (comma separated)</label>
      <input id="authors" name="authors">

      <label for="isbn">ISBN</label>
      <input id="isbn" name="isbn">

      <label for="cover">Cover Image</label>
      <input id="cover" name="cover" type="file" accept="image/*">

      <div style="margin-top:1em">
        <button class="btn" type="submit">Add Book</button>
        <a class="btn-cancel" href="/admin">Cancel</a>
      </div>
    </form>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
